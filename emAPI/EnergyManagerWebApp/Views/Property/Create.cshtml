@model EnergyManagerWebApp.Models.PropertyViewModel 
           
@*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
 
    <div>
        <p>
               Enter the details of the new property below.  Click on 'Create' when you're done.
        </p>
    </div>
        
    <div>
        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Property.Name)
            @Html.ValidationMessageFor(model => model.Property.Name)
        </div>
    </div>
    <div>
        <div class="editor-label">
            Postcode
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Property.Postcode)
            @Html.ValidationMessageFor(model => model.Property.Postcode)
        </div>
    </div>
    <div>
        <div class="editor-label">
            Floor area, in m<sup>2</sup>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FloorArea)
            @Html.ValidationMessageFor(model => model.FloorArea)
        </div>
    </div>
    <div>
        <div class="editor-label">
            How many bedrooms are there?
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumbBedrooms)
            @Html.ValidationMessageFor(model => model.NumbBedrooms)
        </div>
    </div>
    <div>
       <div class="editor-label">
            How is this property heated?
       </div>
       <div class="editor-list">
            @Html.DropDownListFor(model => model.HeatingType.Id, new SelectList(Model.HeatingTypes, "Id", "Description"))
       </div>
    </div>
    <div>
       <div class="editor-label">
            What kind of building is it?
       </div>
       <div class="editor-list">
            @Html.DropDownListFor(model => model.BuildingType.Id, new SelectList(Model.BuildingTypes, "Id", "Description"))
       </div>
    </div>
    <div>
       <div class="editor-label">
            What kind of walls does it have?
       </div>
       <div class="editor-list">
            @Html.DropDownListFor(model => model.WallType.Id, new SelectList(Model.WallTypes, "Id", "Description"))
       </div>
    </div>
    
    <!--Hidden fields-->
    @Html.HiddenFor(model => model.BelongsToUser)

    <p>
        <input type="submit" value="Create" />
    </p>

}

<p>
    @Html.ActionLink("Back", "UserHome", "Home", new { id = int.Parse(User.Identity.Name)}, null)
</p>
