@model EnergyManagerWebApp.Models.InvoiceViewModel

@{double totalCost = Model.Invoice.ConsumptionCharge + Model.Invoice.StandingCharge + Model.Invoice.OtherCharge;}

<div style="background: #F1CCCC; padding:30px;">
@using (Html.BeginForm())
{
        <div style="display: inline-block; vertical-align:middle;">
            <input type="submit" value="Delete" style="background: #F9523B"/>  
        </div>
        <div style="display:inline-block; vertical-align: middle; padding-left: 25px;">
            <span style="font-weight: bold">Are you sure you want to delete this bill?</span> <br />
            Total cost of £@totalCost, received on @Model.Invoice.BillDate.ToShortDateString()
        </div>

            @Html.HiddenFor(model => model.Invoice.Id)
            @Html.HiddenFor(model => model.MeterId)
            @Html.HiddenFor(model => model.BelongsToProperty)
            @Html.HiddenFor(model => model.Fuel)
}
</div>

<p style="padding-left: 30px;">
    @Html.ActionLink("Cancel", "Index", "Invoice", new { meterId = Model.MeterId, propertyId = Model.BelongsToProperty, fuel = Model.Fuel} , null)
</p>
