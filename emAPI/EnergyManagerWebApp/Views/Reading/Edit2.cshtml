@model EnergyManagerWebApp.Models.MeterReadingViewModel
           

<script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
<script src="../../JavaScripts/jquery-ui-1.8.22.custom.min.js" type="text/javascript"></script>
<script type="text/javascript">

    $(function () {
        $("#datepicker").datepicker({ dateFormat: "dd/mm/yy", minDate: "@Model.MinimumEditDate.ToShortDateString()" });
    });

</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MtrReading.Date) <span class="faded">(after @Model.MinimumEditDate.ToShortDateString())</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MtrReading.Date, new { @id = "datepicker", @Value = Model.MinimumEditDate.ToShortDateString() })
            @Html.ValidationMessageFor(model => model.MtrReading.Date)
        </div>
    </div>
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MtrReading.Reading)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MtrReading.Reading)
            @Html.ValidationMessageFor(model => model.MtrReading.Reading)
        </div>
    </div>
            @Html.HiddenFor(model => model.BelongsToMeter)
            @Html.HiddenFor(model => model.BelongsToProperty)
            @Html.HiddenFor(model => model.Fuel)
            @Html.HiddenFor(model => model.MtrReading.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
}