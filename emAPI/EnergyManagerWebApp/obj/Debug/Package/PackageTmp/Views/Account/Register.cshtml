@model EnergyManagerWebApp.Models.UserViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Use the form below to create a new account. 
</p>
<p>
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>User details</legend>

        <div>
            <div class="editor-label">
                @Html.LabelFor(m => m.User.Username)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Username)
                @Html.ValidationMessageFor(m => m.User.Username)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.LabelFor(m => m.User.Forename)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Forename)
                @Html.ValidationMessageFor(m => m.User.Forename)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.LabelFor(m => m.User.Surname)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Surname)
                @Html.ValidationMessageFor(m => m.User.Surname)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.LabelFor(m => m.User.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Email)
                @Html.ValidationMessageFor(m => m.User.Email)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.Label("Password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>
        <div>
            <div class="editor-label">
                @Html.Label("Confirm password")    
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmNewPassword)
                @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
            </div>
        </div>
        <div>
            <div>
                Would you like to create a property now?
            </div>
            <div>
                @Html.CheckBoxFor(m => m.CreateAPropertyNow)
            </div>
        </div>
        

        <p>
            <input type="submit" value="Register" />
        </p>
        </fieldset>
    </div>
}
