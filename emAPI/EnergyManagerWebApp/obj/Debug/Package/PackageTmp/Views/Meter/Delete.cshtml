@model EnergyManagerWebApp.Models.MeterViewModel

<div style="background: #F1CCCC; padding: 30px;">
    @using (Html.BeginForm()) {
   
        <div style="display: inline-block; vertical-align:middle;">
            <input type="submit" value="Delete" style="background: #F9523B"/>  
        </div>
        <div style="display:inline-block; vertical-align: middle; padding-left: 25px;">
            <span style="font-weight: bold">Are you sure you want to delete this meter?</span> <br />
            All meter readings, invoices and tariffs will be gone forever.
        </div>
        @Html.HiddenFor(model => model.BelongsToProperty)
        @Html.HiddenFor(model => model.Meter.Id)
        @Html.HiddenFor(model => model.Meter.Fuel)

                  


    }
</div>

<p style="padding-left:30px;">
    @Html.ActionLink("Cancel", "Home", "Meter", new { meterId = Model.Meter.Id, propertyId = Model.BelongsToProperty, type = Model.Meter.Fuel} , null)
</p>
