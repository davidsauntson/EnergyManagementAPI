@model EnergyManagerWebApp.Models.ElectricityMeterViewModel
           
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

<div>
    <div class="editor-label">
        @Html.Label("Serial number")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Meter.SerialNo)
        @Html.ValidationMessageFor(model => Model.Meter.SerialNo)
    </div>
</div>
<div>    
    <div class="editor-label">
        @Html.Label("Scaling Factor")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Meter.ScalingFactor)
        @Html.ValidationMessageFor(model => Model.Meter.ScalingFactor)
    </div>
</div>  
<div>    
    <div class="editor-label">
        @Html.Label("How many digits are on the meter?")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Meter.NumbDigits)
        @Html.ValidationMessageFor(model => Model.Meter.NumbDigits)
    </div>
 </div>
 <div>
    <div class="editor-label">
        @Html.Label("When did this meter start?")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.StartDate, new { @id = "datepicker", @Value = Model.StartDate.ToString("dd/MM/yyyy"), @readonly = "True" })
        @Html.ValidationMessageFor(model => Model.Meter.StartDate)
    </div>
 </div>
    <p>
        <input type="submit" value="Create" />
    </p>
    
    @Html.HiddenFor(model => model.BelongsToProperty)
 
}

<div class="back">
    @Html.ActionLink("Back to property", "Home", "Property", new { id = Model.BelongsToProperty }, null)
</div>
